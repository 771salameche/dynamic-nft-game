{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./typechain-types"],
    "lib": ["es2020"]
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain-types",
    "./hardhat.config.ts"
  ]
}
